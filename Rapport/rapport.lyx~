\end_layout

\begin_layout Itemize
La page pour gérer le panier et passer au paiement
\end_layout

\begin_layout Itemize
La Homepage
\end_layout

\begin_layout Itemize
La page pour inscription
\end_layout

\begin_layout Itemize
